<% if flash[:error] %>
    <center><p class="bg-danger" id="status_message"><%= flash[:error] %></p></center>
<% end %>

<div class="row" style="position:absolute; width:100%">
	<div class="col-lg-3 col-md-6 col-md-offset-3 col-lg-offset-0">
		<div class="well">
		   	<h3 align="center">Подробно търсене</h3>
			    <form method="post" class="form-horizontal" action="/shop/<%= @category.id %>/1">
				    <div class="form-group">
				        <label for="location1" class="control-label">Категория</label>
				        <select class="form-control" name="category" id="location1">
				           	<option disabled selected value>--изберете опция--</option>
					        <option value="1">Работни станции</option>
					        <option value="2">Сървърни машини</option>
					        <option value="3">Геймин машини</option>
					        <option value="4">Офис машини</option>
				        </select>
				    </div>
				    <div class="form-group">
				        <label for="location1" class="control-label">РАМ Памет</label>
				        <select class="form-control" name="ram" id="location1">
				           	<option disabled selected value>--изберете опция--</option>
					        <option value="2">2 GB</option>
					        <option value="4">4 GB</option>
					        <option value="6">6 GB</option>
					        <option value="8">8 GB</option>
					        <option value="16">16 GB</option>
					        <option value="32">32 GB</option>
				        </select>
				    </div>
				    <div class="form-group">
				        <label for="location1" class="control-label">Процесор</label>
				        <select class="form-control" name="cpu_brand" id="location1">
				           	<option disabled selected value>--изберете опция--</option>
					        <option value="Core 2 Duo">Core 2 Duo</option>
					        <option value="Core 2 Quad">Core 2 Quad</option>
					        <option value="Core i3">Core i3</option>
					        <option value="Core i7">Core i7</option>
					        <option value="Core i5">Core i5</option>
					        <option value="Xeon">Xeon</option>
					        <option value="Opteron">Opteron</option>
				        </select>
				    </div>
				    <div class="form-group">
				       	<label for="location1" class="control-label">Графичен адаптер</label>
				        <select class="form-control" name="gpu_brand" id="location1">
				           	<option disabled selected value>--изберете опция--</option>
					        <option value="Integrated">Integrated</option>
					        <option value="Radeon">Radeon</option>
					        <option value="GeForce">GeForce</option>
					        <option value="Quadro">Quadro</option>
				        </select>
				    </div>
				    <div class="form-group">
				        <label for="location1" class="control-label">Графична памет</label>
				        <select class="form-control" name="gpu_memory" id="location1">
				           	<option disabled selected value>--изберете опция--</option>
					        <option value="0">Споделена</option>
					        <option value="2">2 GB</option>
					        <option value="4">4 GB</option>
					        <option value="6">6 GB</option>
				        </select>
				    </div>
				    <div class="form-group">
				        <label for="location1" class="control-label">Памет</label>
				        <select class="form-control" name="storage_type" id="location1">
				          	<option disabled selected value>--изберете опция--</option>
					        <option value="1">SSD</option>
					        <option value="0">HDD</option>
				        </select>
				    </div>
				    <div class="form-group">
				        <label for="location1" class="control-label">Размер памет</label>
				        <select class="form-control" name="storage_size" id="location1">
				            <option disabled selected value>--изберете опция--</option>
					        <option value="120">120 GB</option>
					        <option value="240">240 GB</option>
					       	<option value="500">500 GB</option>
					        <option value="1000">1 TB</option>
				        </select>
				    </div>
				    <div class="form-group">
				        <label for="pricefrom" class="control-label">Минимална цена</label>
				        <div class="input-group">
						    <div class="input-group-addon" id="basic-addon1">$</div>
						    <input name="minprice" type="text" class="form-control" id="pricefrom" aria-describedby="basic-addon1" value="0">
				        </div>
				    </div>
				    <div class="form-group">
				      	<label for="priceto" class="control-label">Максимална цена</label>
				        <div class="input-group">
				        	<div class="input-group-addon" id="basic-addon2">$</div>
				            <input name="maxprice" type="text" class="form-control" id="priceto" aria-describedby="basic-addon1" value="10000">
				        </div>
				    </div>
		         	<p class="text-center"><input type="submit" class="btn btn-danger glyphicon glyphicon-search" value="Търси"></p>
		        </form>
		    </div>
	   	</div>
	</div>
	
<ul class="products" style="position:absolute; display:inline-block; left:30%; width: 80%">

<%	@items.each do |item| %>
    <li>
        <a href="/shop/<%= @category.id %>/<%= item.id %>/details">
            <img src="https://origincdn.azureedge.net/cdn/v3/img/compare/workstations-millennium-black.png">
            <h4><%= @category.name %> #<%= item.id %></h4>
            <p>$<%= item.price %></p>
        </a>
    </li>
<%	end %>
	<p class="pages"> Страница <%= @page %> /
		<% 
			1.upto @pages do |x| 
		%> 
				<a href="/shop/<%= @category.id %>/<%= x %>"><%= x %></a>
		<% 	end %> 
	</p>
</ul>

